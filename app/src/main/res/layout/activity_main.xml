<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFB4F0"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#7A1F9F"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="16dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back"/>
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/nunito"
            android:textColor="@color/white"
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:textStyle="bold"
            tools:text="3/21" />
    </FrameLayout>
    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/progress"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:max="100"
        android:progress="1"/>
    <ScrollView
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:outlineProvider="none"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="8dp"
                    app:cardCornerRadius="10dp"
                    app:cardUseCompatPadding="true">

                    <TextView
                        android:background="@drawable/result_2"
                        android:gravity="center"
                        android:fontFamily="@font/nunito"
                        android:id="@+id/text_question"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp"
                        android:textColor="#7A1F9F"
                        android:textSize="18dp"
                        tools:text="@tools:sample/avatars" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="36dp"
                    android:layout_marginVertical="4dp"
                    app:cardCornerRadius="10dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout

                        android:clickable="true"
                        android:background="@drawable/result"
                        android:id="@+id/container_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/image_variant_1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:padding="2dp"
                            android:src="@drawable/unchecked"
                            />

                        <Space
                            android:layout_width="12dp"
                            android:layout_height="wrap_content" />

                        <TextView

                            android:fontFamily="@font/nunito"
                            android:textSize="18sp"
                            android:paddingVertical="4dp"
                            android:textColor="@color/white"
                            android:id="@+id/text_variant_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/app_name" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="36dp"
                    android:layout_marginVertical="4dp"
                    app:cardCornerRadius="10dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout

                        android:clickable="true"
                        android:background="@drawable/result"
                        android:id="@+id/container_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/image_variant_2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:padding="2dp"
                            android:src="@drawable/unchecked"
                            />

                        <Space
                            android:layout_width="12dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:fontFamily="@font/nunito"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:paddingVertical="4dp"
                            android:id="@+id/text_variant_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/app_name" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="36dp"
                    android:layout_marginVertical="4dp"
                    app:cardCornerRadius="10dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout

                        android:clickable="true"
                        android:background="@drawable/result"
                        android:id="@+id/container_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/image_variant_3"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:padding="2dp"
                            android:src="@drawable/unchecked"
                            />

                        <Space
                            android:layout_width="12dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:fontFamily="@font/nunito"
                            android:textSize="18sp"
                            android:paddingVertical="4dp"
                            android:textColor="@color/white"
                            android:id="@+id/text_variant_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/app_name" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="36dp"
                    android:layout_marginVertical="4dp"
                    app:cardCornerRadius="10dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout

                        android:clickable="true"
                        android:background="@drawable/result"
                        android:id="@+id/container_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/image_variant_4"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:padding="2dp"
                            android:src="@drawable/unchecked"
                            />

                        <Space
                            android:layout_width="12dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:fontFamily="@font/nunito"
                            android:textSize="18sp"
                            android:paddingVertical="4dp"
                            android:textColor="@color/white"
                            android:id="@+id/text_variant_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/app_name" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </FrameLayout>
    </ScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_weight="4"
        android:gravity="bottom"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_finish"
            android:visibility="gone"
            android:fontFamily="@font/nunito"
            android:layout_width="136dp"
            android:layout_height="56dp"
            android:background="@drawable/button"
            android:textAllCaps="false"
            android:text="Finish"
            app:layout_constraintEnd_toStartOf="@id/btn_next"
            android:textColor="#7A1F9F"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_next"
            android:fontFamily="@font/nunito"
            android:layout_width="136dp"
            android:layout_height="56dp"
            android:background="@drawable/button"
            android:enabled="false"
            android:onClick="onNext"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:text="Next"
            android:textColor="#7A1F9F"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_finish"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>