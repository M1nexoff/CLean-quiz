<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2616DCFF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize">
        <FrameLayout
            android:background="#CC0736DF"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:fontFamily="@font/nunito"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Java Test"
                android:layout_marginRight="10dp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_gravity="center"
                />
            <ImageView
                android:backgroundTint="@color/white"
                android:id="@+id/quit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/quit"
                android:layout_marginRight="10dp"
                android:layout_gravity="center|right"/>
        </FrameLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2616DCFF"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2616DCFF"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="20dp"
                android:outlineProvider="none"
                android:id="@+id/introduction"
                android:backgroundTint="#D984ED0A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:layout_marginHorizontal="16dp"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:fontFamily="@font/nunito"
                    android:padding="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Kirish"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold" />


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="20dp"
                android:id="@+id/types"
                android:layout_width="match_parent"
                android:backgroundTint="#EEFF41"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:layout_marginHorizontal="16dp"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:fontFamily="@font/nunito"
                    android:padding="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Toifalar"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="20dp"
                android:id="@+id/strings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFD740"
                android:layout_marginVertical="12dp"
                android:layout_marginHorizontal="16dp"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:fontFamily="@font/nunito"
                    android:padding="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Stringlar"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="20dp"
                android:id="@+id/arrays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFAB40"
                android:layout_marginVertical="12dp"
                android:layout_marginHorizontal="16dp"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:fontFamily="@font/nunito"
                    android:padding="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Arraylar"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="20dp"
                android:id="@+id/clas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF6E40"
                android:layout_marginVertical="12dp"
                android:layout_marginHorizontal="16dp"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:fontFamily="@font/nunito"
                    android:padding="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Class va Object"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />


            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>
</LinearLayout>